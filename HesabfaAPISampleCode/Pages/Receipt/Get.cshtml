@page
@using HesabfaAPISampleCode.Models
@model HesabfaAPISampleCode.Pages.Receipt.GetModel
@{
    ViewData["Title"] = "دریافت رسید دریافت یا پرداخت";
    var receipt = (ReceiptItem)ViewData["receipt"];
    <div class="row">
        <div class="container">
            <div class="col-12">
                <form method="post" class="d-flex flex-column justify-content-center">
                    <div class="form-group">
                        <label for="type">نوع رسید </label>
                        <select name="type" class="form-select">
                            <option value="1">دریافت</option>
                            <option value="2">پرداخت</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="number">شماره رسید </label>
                        <input type="text" name="number" class="form-control" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">نمایش</button>
                </form>
                <div id="receiptGridContainer"></div>
                @if(receipt != null){
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>شماره رسید</th>
                                <th>تاریخ رسید</th>
                                <th>شرح</th>
                                <th>مبلغ رسید</th>
                                <th>واحد پول رسید</th>
                                <th>پروژه</th>
                                <th>Items</th>
                                <th>Transactions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@receipt.Id</td>
                                <td>@receipt.Number</td>
                                <td>@receipt.DateTime</td>
                                <td>@receipt.Description</td>
                                <td>@receipt.Amount</td>
                                <td>@receipt.Currency</td>
                                <td>@receipt.Project</td>
                                <td>
                                    @if (receipt.Items != null)
                                    {
                                        @foreach (var item in receipt.Items)
                                        {
                                            @if (item.Contact != null)
                                            {
                                                <div>@item.Contact.Id</div>
                                                <div>@item.Contact.Code</div>
                                                <div>@item.Contact.Name</div>
                                            }
                                            <div>@item.Amount</div>
                                            <div>@item.Description</div>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (receipt.Transactions != null)
                                    {
                                        @foreach (var item in receipt.Transactions)
                                        {
                                            <div>@item.Cash</div>
                                            @if (item.Bank != null ){
                                                <div>@item.Bank.Id</div>
                                                <div>@item.Bank.Code</div>
                                                <div>@item.Bank.Name</div>
                                            }
                                            <div>@item.PettyCash</div>
                                            <div>@item.Contact</div>
                                            <div>@item.Check</div>
                                            <div>@item.Amount</div>
                                        }
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
}