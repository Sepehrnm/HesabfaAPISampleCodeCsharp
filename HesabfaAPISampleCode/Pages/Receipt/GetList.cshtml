@page
@using HesabfaAPISampleCode.Models
@model HesabfaAPISampleCode.Pages.Receipt.GetListModel
@{
    ViewData["Title"] = "دریافت لیست رسیدهای دریافت یا پرداخت";
    var data = (Receipt)ViewData["receipts"];
    <div class="row">
        <div class="container">
            <form method="post" class="d-flex flex-column justify-content-center">
                <div class="form-group">
                    <label for="type">نوع فاکتور </label>
                    <select name="type" class="form-select">
                        <option value="1">دریافت</option>
                        <option value="2">پرداخت</option>
                    </select>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">نمایش</button>
            </form>
            <div id="receiptsGridContainer"></div>
        </div>
    </div>
}

<script>
    var receipts = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(data?.List));
    initializeGetReceiptsListPage();
</script>
